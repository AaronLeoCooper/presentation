@require '_fonts'
@require '_variables'

*
  box-sizing border-box
  color #fff
  border 0
  outline 0
  margin 0
  padding 0

html
  bg-body()
  background-repeat no-repeat

body
  min-height 100%

.slide
  width 800px
  height 600px
  padding 20px
  background rgba(255, 255, 255, .2)

h1, .h1,
h2, .h2,
h3, .h3,
h4, .h4,
h5, .h5,
h6, .h6
  sans-serif(300)
  margin 0
