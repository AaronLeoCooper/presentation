/**
 * Sans Serif
 */
@font-face
  font-family 'Hind-Light'
  src url(../fonts/Hind/Hind-Light.ttf)

@font-face
  font-family 'Hind-Regular'
  src url(../fonts/Hind/Hind-Regular.ttf)

@font-face
  font-family 'Hind-Semibold'
  src url(../fonts/Hind/Hind-Semibold.ttf)

@font-face
  font-family 'Hind-Bold'
  src url(../fonts/Hind/Hind-Bold.ttf)

sans-serif($weight = 400)
  if $weight == 700
    font-family 'Hind-Bold'
  else if $weight == 600
    font-family 'Hind-Semibold'
  else if $weight == 300
    font-family 'Hind-Light'

/**
 * Serif
 */
@font-face
  font-family 'NotoSerif-Regular'
  src url(../fonts/Noto_Serif/NotoSerif-Regular.ttf)

@font-face
  font-family 'NotoSerif-Bold'
  src url(../fonts/Noto_Serif/NotoSerif-Bold.ttf)

serif($weight = 400)
  if $weight == 700
    font-family 'NotoSerif-Bold'
  else
    font-family 'NotoSerif-Regular'
