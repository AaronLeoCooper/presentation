bg-body()
  background: #59c3e0
  background: -moz-linear-gradient(-45deg,  #59c3e0 0%, #c0d856 100%)
  background: -webkit-linear-gradient(-45deg,  #59c3e0 0%,#c0d856 100%)
  background: linear-gradient(135deg,  #59c3e0 0%,#c0d856 100%)
  filter: "progid:DXImageTransform.Microsoft.gradient( startColorstr='#59c3e0', endColorstr='#c0d856', GradientType=1 )"

clearfix()
  &:after
    content ""
    display table
    clear both
